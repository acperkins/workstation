#!/bin/sh
if [ -r "$HOME/.profile" ]
then
    . "$HOME/.profile"
fi

case "$-" in
*i*)
    # Shell is interactive.
    if [ -r /etc/profile.d/bash_completion.sh ]
    then
        . /etc/profile.d/bash_completion.sh
    fi
    set -o emacs
    usermotd
    ;;
*)
    # Shell is not interactive.
    return 1
    ;;
esac
